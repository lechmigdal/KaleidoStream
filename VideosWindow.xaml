<Window x:Class="KaleidoStream.VideosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KaleidoStream"
        xmlns:properties="clr-namespace:KaleidoStream.Properties"
        Title="Videos list" Height="350" Width="600" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="StreamsDataGrid"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          Grid.Row="0"
          Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static properties:Resources.Name}" Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="2*" />
                <DataGridTextColumn Header="{x:Static properties:Resources.URL}" Binding="{Binding Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="4*" />
                <DataGridCheckBoxColumn Header="{x:Static properties:Resources.Enabled}" Binding="{Binding Enabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                <DataGridTemplateColumn Header=" " Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Click="DeleteButton_Click" ToolTip="{x:Static properties:Resources.DeleteStream}" Padding="4" Margin="2">
                                <Viewbox Width="16" Height="16">
                                    <Canvas Width="16" Height="16">
                                        <Image Source="images/Delete.png" Width="16" Height="16"/>
                                    </Canvas>
                                </Viewbox>
                                </Button>
                                <Button Click="MoveUpButton_Click" ToolTip="Move up" Padding="4" Margin="2">
                                    <Viewbox Width="16" Height="16">
                                        <Canvas Width="16" Height="16">
                                            <Path Data="M8,2 L2,10 L14,10 Z" Fill="Black"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                                <Button Click="MoveDownButton_Click" ToolTip="Move down" Padding="4" Margin="2">
                                    <Viewbox Width="16" Height="16">
                                        <Canvas Width="16" Height="16">
                                            <Path Data="M8,14 L2,6 L14,6 Z" Fill="Black"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,0,0,10">
            <Button Content="{x:Static properties:Resources.Add}" Width="80" Height="30" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button Content="{x:Static properties:Resources.Save}" Width="80" Height="30" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="{x:Static properties:Resources.Cancel}" Width="80" Height="30" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>