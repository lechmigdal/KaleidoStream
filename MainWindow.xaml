<Window x:Class="KaleidoStream.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:KaleidoStream.Properties"
        Title="KaleidoStream - Video Stream Viewer" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
		WindowState="Maximized"
        Icon="images/kaleidostream.ico"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
		</Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="{x:Static properties:Resources.MenuFile}">
                <MenuItem Header="{x:Static properties:Resources.MenuVideos}" Click="VideosMenuItem_Click"/>
                <MenuItem Header="{x:Static properties:Resources.MenuTheme}" Click="SwitchThemeMenuItem_Click"/>
                <MenuItem Header="{x:Static properties:Resources.MenuResolution}">
                    <MenuItem Header="176x144" Click="ResolutionMenuItem_Click" Tag="176x144"/>
                    <MenuItem Header="320x240" Click="ResolutionMenuItem_Click" Tag="320x240"/>
                    <MenuItem Header="480x360" Click="ResolutionMenuItem_Click" Tag="480x360"/>
                    <MenuItem Header="640x480" Click="ResolutionMenuItem_Click" Tag="640x480"/>
                    <MenuItem Header="1024x768" Click="ResolutionMenuItem_Click" Tag="1024x768"/>
                </MenuItem>
                <MenuItem Header="{x:Static properties:Resources.MenuExit}" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Stream Grid Container -->
		
		<UniformGrid x:Name="StreamGrid"
                        Grid.Row="1"
                        Columns="{Binding GridColumns}"
                        Rows="{Binding GridRows}"
                        Margin="5"/>
		
	</Grid>
</Window>